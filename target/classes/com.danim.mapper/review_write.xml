<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="review"> <!-- review라는 이름의 namespace로 mapper간의 유일성을 보장한다  -->

 <insert id="insert" parameterType="reviewVo">
            INSERT INTO review
            (	
                review_title,
                review_content,
                review_filename,
                writer,
                do_id,
                si_id,
                user_id
            )
            VALUES
            (
                #{review_title},
                #{review_content},
                 #{review_filename},
                #{writer},
                #{do_id},
                #{si_id},
                1)
    </insert>
    
</mapper>